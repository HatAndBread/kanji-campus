
<div class="flex flex-col w-full items-center mt-8">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-4">

      <div class="">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-primary w-full max-w-xs", placeholder: "E-mail"  %>
      </div>

      <div class="">
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered input-primary w-full max-w-xs", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-control">
          <label class="label cursor-pointer">
            <span class="label-text">Remember me</span> 
            <%= f.check_box :remember_me, checked: "checked", class: "checkbox checkbox-accent" %>
          </label>
        </div>
      <% end %>

      <div class="flex flex-col gap-2">
        <%= f.submit "Sign In", class: "btn btn-primary" %>

        <div class="flex flex-col mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
